section#concerts.concerts

  .concerts__bg
    img(src='img/img-grid.svg' parallax-js data-stellar-ratio="0.9")
    img(src='img/img-grid.svg' parallax-js data-stellar-ratio="1.1")

  .container-fluid

    .concerts__wrapper.mr-auto.ml-auto.position-relative

      h1.concerts__title.c-title.pl-0 Concerts

      .concerts__box-wrapper.position-relative.d-flex.flex-wrap
        each val, idx in [1,2,3,4]
          div
            a.card.concerts__box.d-flex.flex-column(href='https://www.google.com/' title='')
              .concerts__box-head.overflow-hidden.position-relative.w-100
                img.card-img-top(src='img/img-concerts-1.jpg', srcset='img/img-concerts-1@2x.jpg 2x', alt='')
              .card-body.d-flex.align-items-center
                div
                  h5.card-title Christine & The Queens - Apple Music
                  p.card-text Iconic Headline Performance
                div
                  i.icon-font.icon-arrow
          div
            a.card.concerts__box.d-flex.flex-column(href='https://www.google.com/' title='')
              .concerts__box-head.overflow-hidden.position-relative.w-100
